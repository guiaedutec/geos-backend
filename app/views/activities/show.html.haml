- model_class = Activity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize


%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @activity.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @activity.description
%p
  %strong= model_class.human_attribute_name(:is_state) + ':'
  %br
  =b @activity.is_state
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = human_activity_name @activity.type

%p
  %strong= model_class.human_attribute_name(:title_file_upload) + ':'
  %br
  = @activity.title_file_upload

%p
  %strong= model_class.human_attribute_name(:file_upload) + ':'
  %br
  = @activity.file_upload

= link_to t('.back', :default => t("helpers.links.back")), activities_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_activity_path(@activity), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), activity_path(@activity), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
