- model_class = State
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:acronym) + ':'
  %br
  = @state.acronym
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @state.name
%p
  %strong= model_class.human_attribute_name(:region) + ':'
  %br
  = @state.region


= link_to t('.back', :default => t("helpers.links.back")), states_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_state_path(@state), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), state_path(@state), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
