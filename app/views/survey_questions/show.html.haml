- model_class = SurveyQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @survey_question.name
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @survey_question.position
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @survey_question.type
%p
  %strong= model_class.human_attribute_name(:main_question_id) + ':'
  %br
  = @survey_question.main_question_id
%p
  %strong= model_class.human_attribute_name(:survey_section_id) + ':'
  %br
  = @survey_question.survey_section_id


= link_to t('.back', :default => t("helpers.links.back")), survey_questions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_survey_question_path(@survey_question), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), survey_question_path(@survey_question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
