- model_class = SurveySection
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
.col-xs-12
  .row= paginate @survey_sections

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:questions)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:survey_id)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @survey_sections.each do |survey_section|
      %tr
        %td= link_to survey_section.id, survey_section_path(survey_section)
        %td= survey_section.name
        %td= survey_section.position
        %td= survey_section.questions
        %td= survey_section.description
        %td= survey_section.survey_id
        %td= survey_section.state
        %td=l survey_section.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_survey_section_path(survey_section), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), survey_section_path(survey_section), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_survey_section_path, :class => 'btn btn-primary'
.col-xs-12
  .row= paginate @survey_sections
