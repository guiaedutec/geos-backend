- model_class = School
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
.col-xs-12
  .row= paginate @schools
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:inep_code)
      %th= model_class.human_attribute_name(:staff_observations)
      %th= model_class.human_attribute_name(:student_observations)
      %th= model_class.human_attribute_name(:student_diurnal_count)
      %th= model_class.human_attribute_name(:student_vespertine_count)
      %th= model_class.human_attribute_name(:student_nocturnal_count)
      %th= model_class.human_attribute_name(:student_full_count)
      %th= model_class.human_attribute_name(:student_count)
      %th= model_class.human_attribute_name(:staff_count)
      %th= model_class.human_attribute_name(:kindergarten)
      %th= model_class.human_attribute_name(:elementary_1)
      %th= model_class.human_attribute_name(:elementary_2)
      %th= model_class.human_attribute_name(:highschool)
      %th= model_class.human_attribute_name(:technical)
      %th= model_class.human_attribute_name(:adult)
      %th= model_class.human_attribute_name(:regional)
      %th= model_class.human_attribute_name(:private)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:location_type)
      %th= model_class.human_attribute_name(:sample)
      %th= model_class.human_attribute_name(:observations)
      %th= model_class.human_attribute_name(:vision_level)
      %th= model_class.human_attribute_name(:competence_level)
      %th= model_class.human_attribute_name(:resource_level)
      %th= model_class.human_attribute_name(:infrastructure_level)
      %th= model_class.human_attribute_name(:answered)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:manager_name)
      %th= model_class.human_attribute_name(:manager_phone)
      %th= model_class.human_attribute_name(:manager_email)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @schools.each do |school|
      %tr
        %td= link_to school.id, school_path(school)
        %td= school.name
        %td= school.inep_code
        %td= school.staff_observations
        %td= school.student_observations
        %td= school.student_diurnal_count
        %td= school.student_vespertine_count
        %td= school.student_nocturnal_count
        %td= school.student_full_count
        %td= school.student_count
        %td= school.staff_count
        %td=b school.kindergarten
        %td=b school.elementary_1
        %td=b school.elementary_2
        %td=b school.highschool
        %td=b school.technical
        %td=b school.adult
        %td= school.regional
        %td=b school.private
        %td= school.type
        %td= school.location_type
        %td=b school.sample
        %td= school.observations
        %td= school.vision_level
        %td= school.competence_level
        %td= school.resource_level
        %td= school.infrastructure_level
        %td=b school.answered
        %td= school.city
        %td= school.manager_name
        %td= school.manager_phone
        %td= school.manager_email
        %td=l school.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_school_path(school), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), school_path(school), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_school_path, :class => 'btn btn-primary'
.col-xs-12
  .row= paginate @schools
