    height: 100%;
}

.page2 .row .instruction .col-xs-4 .description {
    height: 100%;
    width: 100%;
    font-size: 22px;
    background: #cfd0d5;
}

.page2 .row .instruction .col-xs-4 .description>p {
    height: 100%;
    padding: 130px 0px 130px 40px;
    font-size: 22px;
    background: #cfd0d5;
    color: black;
}


.page2 .row .instruction .items {
    background: #cfd0d5;
    margin: auto;
    display: -webkit-box;
    display: -webkit-flex;
    position: relative;
    padding-left: 80px;
    display: flex;
    justify-content: space-between;
}

.page2 .row .instruction .items .image {
    height: 200px;
    width: 200px;
}

.page2 .row .instruction .items .image,
.page2 .row .instruction .items .meta {
    position: relative;

}

.page2 .row .instruction .items .image .label,
.page2 .row .instruction .items .meta .label {
    position: absolute;
    height: 100%;
    left: -50px;
    top: 0;
    width: 30px;
    overflow: hidden;
    white-space: nowrap;
}

.page2 .row .instruction .items .image .label>strong,
.page2 .row .instruction .items .meta .label>strong {
    color: black;
    position: absolute;
    -webkit-font-smoothing: antialiased;
    top: 0;
    bottom: 0;
    height: 2em;
    margin: auto;
    font-size: 20px;
    font-weight: bold;
    -webkit-transform-origin: 0 50%;
    -webkit-transform: rotate(-90deg) translate(-50%, 50%);
}

.page2 .row .instruction .items .item {
    flex: 1;
    padding: 30px;
    position: relative;
}

.page2 .row .instruction .items .item .title {
    width: 100%;
    text-align: center;
    text-transform: uppercase;
    position: absolute;
    bottom: 20px;
    line-height: 20px;
}

.page2 .row .instruction .items .item.item-1 ul li {
    border-color: #7c2558;
}

.page2 .row .instruction .items .item.item-1 .title {
    color: #7c2558;
}

.page2 .row .instruction .items .item.item-2 ul li {
    border-color: #0b7b7d;
}

.page2 .row .instruction .items .item.item-2 .title {
    color: #0b7b7d;
}

.page2 .row .instruction .items .item.item-3 ul li {
    border-color: #048fd2;
}

.page2 .row .instruction .items .item.item-3 .title {
    color: #048fd2;
}

.page2 .row .instruction .items .item img {
    width: 100%;
}

.page2 .row .instruction .items .item ul {
    list-style: none;
    margin-top: 30px;
    padding: 0;
}

.page2 .row .instruction .items .item ul li {
    padding: 10px 0;
    text-align: center;
    font-size: 20px;
    border-bottom: 2px solid #000;
}

