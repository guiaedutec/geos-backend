.area {
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: contain;
}

.area .cabecalho {
    background-color: #85c440;
    color: #ffffff;
    padding: 30px 20px 10px;
    font-weight: bold;
    z-index: 10;
    position: relative;
}

.area .cabecalho .imagem-titulo {
    width: 96px;
    height: 91px;
}

.area .linha-diagonal {
    z-index: 0;
    position: relative;
}

.area .linha-diagonal .primeira {
    z-index: 3;
    height: 20px;
    top: -12px;
    left: auto;
    background-color: #9dc867;
    transform: skewy(-1deg);
    -webkit-transform: skewy(-1deg);
    -o-transform: skewy(-1deg);
}

.area .linha-diagonal .segunda {
    z-index: 2;
    height: 20px;
    top: -24px;
    left: auto;
    background-color: #c0da9e;
    transform: skewy(-2deg);
    -webkit-transform: skewy(-2deg);
    -o-transform: skewy(-2deg);
}

.area .linha-diagonal .terceira {
    z-index: 1;
    height: 20px;
    top: -36px;
    left: auto;
    background-color: #e6f0da;
    transform: skewy(-3deg);
    -webkit-transform: skewy(-3deg);
    -o-transform: skewy(-3deg);
}

.area .quadrante {
    min-height: 300px;
}

.area .quadrante .imagem-velocimentro {
    width: 360px;
    height: 180px;
    margin: 20px 0 20px 75px;
}

.area .quadrante .nivel {
    text-align: center;
}

.area .quadrante .nivel span {
    font-size: 28px;
    text-transform: uppercase;
    color: #ffffff;
    background-color: gray;
    padding: 10px 30px;
    font-weight: bold;
}

.area .quadrante .icone {
    width: 80px;
    height: 80px;
    float: left;
    margin-top: 40px;
    margin-right: 30px;
}

.area .quadrante .conteudo {
    width: 350px;
    float: left;
}

.area .quadrante .conteudo h2 {
    margin-top: 0;
    margin-bottom: 15px;
    position: relative;
}

.area .quadrante .conteudo h2:before {
    position: absolute;
    content: '';
    width: 100%;
    height: 2px;
    bottom: -10px;
    left: 0;
    background-color: lightgray;
    border-radius: 1px;
}

.area .quadrante .conteudo.o-que h2:before {
    width: 205px;
}

.area .quadrante .conteudo.onde h2:before {
    width: 127px;
}

.area .quadrante .conteudo.como h2:before {
    width: 212px;
}




