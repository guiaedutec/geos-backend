html {
    font-size: 100%;
}

body {
    font-size: 18px;
    font-family: 'Lato', Arial, sans-serif;
    color: #14243d;
    width: 100%;
    margin: 0;
    padding: 0;
}

a {
    color: #141e3b !important;
    text-decoration: none;
}

hr.green {
    border-color: #85c440;
}

div.page-break {
    page-break-before: always;
    min-height: 990px;
}

div.nobreak:before {
    clear: both;
}

div.nobreak {
    page-break-inside: avoid;
}

h1 {
    position: relative;
    margin-bottom: 50px;
    text-transform: uppercase;
    font-weight: bold;
}

h1:after {
    content: '';
    position: absolute;
    border-bottom: 7px solid #ffffff;
    width: 205px;
    bottom: -20px;
    left: 0;
}

h2 {
    font-size: 1.3em;
    font-weight: bold;
    margin-bottom: 50px;
}

.with-padding {
    padding: 50px;
}

.clear {
    clear: both;
}


